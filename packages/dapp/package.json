    "dependencies": {
        "@airgap/beacon-sdk": "^2.0.0",
        "@craco/craco": "^6.0.0",
        "@tailwindcss/postcss7-compat": "^2.0.2",
        "@taquito/beacon-wallet": "^7.1.0-beta.0",
