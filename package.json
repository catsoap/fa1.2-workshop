{
  "name": "@fa1.2-workshop/monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "yarn workspace @fa1.2-workshop/contracts compile",
    "migrate": "yarn workspace @fa1.2-workshop/contracts migrate",
    "start-dapp": "yarn workspace @fa1.2-workshop/dapp start",
    "start-sandbox": "yarn workspace @fa1.2-workshop/contracts start-sandbox",
    "test-contracts": "yarn workspace @fa1.2-workshop/contracts test",
    "lint": "yarn run lint.eslint && yarn run lint.prettier && yarn run lint.types",
    "lint.eslint": "eslint . --ext ts",
    "lint.prettier": "prettier -c src/**/*.ts",
    "lint.types": "tsc --noEmit"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
